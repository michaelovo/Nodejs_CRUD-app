
<!DOCTYPE html>
<html lang="en">

<% include ../partials/header %>

<body>
		<!-- start: Header -->
    <% include ../partials/navbar %>
	   <!-- start: Header -->

		<div class="container-fluid-full">
		<div class="row-fluid">

			<!-- start: Main Menu -->
      <% include ../partials/sidebar %>
			<!-- end: Main Menu -->

			<!-- start: Content -->
			<div id="content" class="span10">

			<div class="row-fluid sortable">
						<div class="box span12">
							<div class="box-header" data-original-title>
								<h2><i class="halflings-icon th-list"></i><span class="break"></span>Events List</h2>
								<div class="box-icon">
									<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
									<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
									<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>

								</div>
							</div>


							<div class="box-content">
										<div class="center">

								<a class="btn btn-success" href="/event/add">
									<i class="halflings-icon white plus-sign"></i>Add new
								</a>

									 </div>
                   <% if(items.length > 0) { %>
                 <table class="table table-striped table-bordered bootstrap-datatable datatable">
                   <thead>
                     <tr>
                       <!--th>id</th-->
                       <th>Event name</th>
                       <th>Date</th>
                       <!--th>End date</th-->
                       <!--th>Date added</th-->
                       <!--th>Date modified</th-->
                       <th>Description</th>
                       <th>Location</th>
                       <th>Actions</th>
                     </tr>
                   </thead>
                   <tbody>


                     <% items.forEach(function(item, index){ %>
                        <tr>

                         <!--td class="center"><?php //echo $value->id; ?></td-->
                         <td class="center"><%= item.e_name %></td>
                         <td class="center"><%= item.e_start_date %></td>
                         <td class="center"><%= item.e_desc %></td>
                         <td class="center"><%= item.e_location %></td>

                         <td class="center">

                               <a class="btn btn-primary" href="/event/edit/<%= item.id %>">
                                 <i class="halflings-icon white edit"></i>
                               </a>

                               <a class="btn btn-danger" href="/event/delete/<%= item.id %>">
                                 <i class="halflings-icon white trash"></i>
                               </a>
                         </td>
                      </tr>
                    <% }); %>

                   </tbody>
                 </table>
                 <% }else{ %>
                     <p>No records found</p>
                     <% } %>
							</div>
						</div><!--/span-->

					</div><!--/row-->
			</div>
			<div class="row-fluid">

			</div>
	</div><!--/.fluid-container-->
<div>
			<!-- end: Content -->
		</div><!--/#content.span10-->
		</div><!--/fluid-row-->

	<div class="clearfix"></div>

  <% include ../partials/footer %>
</body>
</html>
